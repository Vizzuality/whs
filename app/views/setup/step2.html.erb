<% content_for :javascripts do %>
<%= javascript_include_tag 'jquery.min.js', 'setup/step2.js' %>
<% end %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'setup/index.css', 'setup/step2.css' %>
<% end %>

<%= render 'step_indicator', :step => 2 %>

<div class="small_content_box">
  <h1><%= t('.title') %></h1>
  <p><%= t('.description') %></p>
  <%= form_for @settings, :as => :settings, :url => setup_path(:step_id => 3), :html => { :method => :get } do |form| %>
    <%= form.label 'app_name', t('.app_name') %>
    <%= form.text_field 'app_name' %>
    <%= form.submit t('.next_step'), :class => 'main_action' %>
  <% end %>
</div>